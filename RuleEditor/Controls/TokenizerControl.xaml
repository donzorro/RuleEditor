<UserControl
  x:Class="RuleEditor.ViewModels.Version2.TokenizerControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:RuleEditor.ViewModels.Version2"
  Focusable="True"
  IsTabStop="True">
  <UserControl.Resources>

    <!-- Converter to show/hide the dropdown button based on text content -->
    <BooleanToVisibilityConverter
      x:Key="BooleanToVisibilityConverter" />
    <local:StringToVisibilityConverter
      x:Key="StringToVisibilityConverter" />
    <local:InverseBooleanToVisibilityConverter
      x:Key="InverseBooleanToVisibilityConverter" />
    <local:WatermarkVisibilityConverter
      x:Key="WatermarkVisibilityConverter" />

    <!-- Custom style for the ComboBox -->
    <Style
      x:Key="InputComboBoxStyle"
      TargetType="ComboBox">
      <Setter
        Property="Template">
        <Setter.Value>
          <ControlTemplate
            TargetType="ComboBox">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition
                  Width="*" />
                <ColumnDefinition
                  Width="Auto" />
              </Grid.ColumnDefinitions>

              <!-- TextBox part -->
              <TextBox
                x:Name="PART_EditableTextBox"
                Grid.Column="0"
                Background="{TemplateBinding Background}"
                BorderThickness="0"
                Padding="{TemplateBinding Padding}"
                IsReadOnly="{TemplateBinding IsReadOnly}"
                Foreground="{TemplateBinding Foreground}"
                MinWidth="{TemplateBinding MinWidth}"
                Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

              <!-- Watermark TextBlock -->
              <TextBlock
                x:Name="WatermarkTextBlock"
                Grid.Column="0"
                Margin="3,0,0,0"
                Text="Select a property"
                Foreground="Gray"
                VerticalAlignment="Center">
                <TextBlock.Visibility>
                  <MultiBinding
                    Converter="{StaticResource WatermarkVisibilityConverter}">
                    <Binding
                      ElementName="PART_EditableTextBox"
                      Path="Text" />
                    <Binding
                      ElementName="PART_EditableTextBox"
                      Path="IsFocused" />
                  </MultiBinding>
                </TextBlock.Visibility>
              </TextBlock>

              <!-- Toggle Button (dropdown button) -->
              <ToggleButton
                x:Name="PART_ToggleButton"
                Grid.Column="1"
                Width="16"
                Height="16"
                Margin="2,0,0,0"
                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                Visibility="{Binding Text, ElementName=PART_EditableTextBox, Converter={StaticResource StringToVisibilityConverter}}">
                <Path
                  Width="8"
                  Height="4"
                  Fill="Black"
                  Data="M 0,0 L 8,0 L 4,4 Z" />
              </ToggleButton>

              <!-- Popup for dropdown -->
              <Popup
                x:Name="PART_Popup"
                AllowsTransparency="True"
                IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=PART_EditableTextBox}"
                StaysOpen="False">
                <Border
                  Background="White"
                  BorderBrush="Gray"
                  BorderThickness="1">
                  <ScrollViewer
                    MaxHeight="200">
                    <ItemsPresenter />
                  </ScrollViewer>
                </Border>
              </Popup>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>


  </UserControl.Resources>

  <Grid>
    <WrapPanel
      x:Name="tokenPanel"
      Background="Transparent"
      MouseDown="TokenPanel_MouseDown">
      <!-- Tokens will be added here dynamically 
              SelectionChanged="InputBox_SelectionChanged"-->
      <ComboBox
        x:Name="inputBox"
        MinWidth="50"
        BorderThickness="0"
        Background="Transparent"
        IsEditable="True"
        StaysOpenOnEdit="True"
        IsTextSearchEnabled="True"
        Style="{StaticResource InputComboBoxStyle}"
        PreviewKeyDown="InputBox_KeyDown"
        TextBoxBase.TextChanged="InputBox_TextChanged"
        LostFocus="InputBox_LostFocus" />
    </WrapPanel>
  </Grid>
</UserControl>