<UserControl
  x:Class="RuleEditor.ViewModels.Version2.RuleEditorView2"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:RuleEditor.ViewModels.Version2"
  mc:Ignorable="d"
  d:DesignHeight="450"
  d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="*" />
      <ColumnDefinition
        Width="300" />
    </Grid.ColumnDefinitions>

    <!-- Left side - Expression Editor -->
    <Grid
      Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition
          Height="*" />
        <RowDefinition
          Height="Auto" />
      </Grid.RowDefinitions>

      <Border
        Grid.Row="0"
        Background="White"
        BorderBrush="#CCCCCC"
        BorderThickness="1"
        Margin="5">
        <ScrollViewer
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Auto">
          <local:TokenizerControl
            x:Name="expressionEditor"
            Margin="5"
            TokenAdded="ExpressionEditor_TokenAdded"
            TokenRemoved="ExpressionEditor_TokenRemoved"
            TokenChanged="ExpressionEditor_TokenChanged" />
        </ScrollViewer>
      </Border>

      <StackPanel
        Grid.Row="1"
        Orientation="Horizontal"
        Margin="5">
        <Button
          x:Name="formatButton"
          Content="Format Expression"
          Click="FormatButton_Click"
          Margin="0,0,5,0"
          Padding="5,2" />

        <Button
          x:Name="validateButton"
          Content="Validate"
          Click="ValidateButton_Click"
          Margin="0,0,5,0"
          Padding="5,2" />

        <TextBlock
          x:Name="validationMessage"
          VerticalAlignment="Center"
          Margin="5,0" />
      </StackPanel>
    </Grid>

    <!-- Right side - Help Panel -->
    <Grid
      Grid.Column="1"
      Margin="5">
      <Grid.RowDefinitions>
        <RowDefinition
          Height="Auto" />
        <RowDefinition
          Height="*" />
        <RowDefinition
          Height="Auto" />
        <RowDefinition
          Height="*" />
      </Grid.RowDefinitions>

      <TextBlock
        Grid.Row="0"
        Text="Expression Help"
        FontWeight="Bold"
        Margin="0,0,0,5" />

      <StackPanel
        Grid.Row="1">
        <GroupBox
          Header="Operators">
          <StackPanel
            Margin="5">
            <TextBlock
              TextWrapping="Wrap"
              Margin="0,0,0,5">
                  <Run
                FontWeight="Bold">Available Operators:</Run>
                  <LineBreak />
                  <Run>Comparison: > &lt; >= &lt;= == !=</Run>
                  <LineBreak />
                  <Run>String: Contains, StartsWith, EndsWith</Run>
                  <LineBreak />
                  <Run>Logical: AND, OR, NOT</Run>
            </TextBlock>
            <TextBlock
              TextWrapping="Wrap"
              Margin="0,5">
                  <Run
                FontWeight="Bold">Examples:</Run>
                  <LineBreak />
                  <Run>Age > 18</Run>
                  <LineBreak />
                  <Run>Name.Contains('John')</Run>
                  <LineBreak />
                  <Run>(Price >= 100 AND Category == 'Electronics')</Run>
            </TextBlock>
          </StackPanel>
        </GroupBox>

        <GroupBox
          Header="Examples"
          Margin="0,5">
          <StackPanel
            Margin="5">
            <TextBlock
              TextWrapping="Wrap"
              Text="Age > 18 AND Name CONTAINS 'John'" />
            <TextBlock
              TextWrapping="Wrap"
              Margin="0,5"
              Text="Balance >= 1000 OR IsActive == true" />
            <TextBlock
              TextWrapping="Wrap"
              Margin="0,5"
              Text="Email ENDSWITH '@company.com'" />
          </StackPanel>
        </GroupBox>

        <GroupBox
          Header="Tips"
          Margin="0,5">
          <StackPanel
            Margin="5">
            <TextBlock
              TextWrapping="Wrap"
              Text="• Use quotes for text values" />
            <TextBlock
              TextWrapping="Wrap"
              Margin="0,5"
              Text="• Each line is treated as AND" />
            <TextBlock
              TextWrapping="Wrap"
              Margin="0,5"
              Text="• Use parentheses for complex expressions" />
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
